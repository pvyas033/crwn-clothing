/* This file is no longer in use */

.header {
  height: 70px;
  width: 100%;
  display: grid;
  place-items: center;
  justify-content: space-between;
  grid-template-columns: auto 170px;
  margin-bottom: 25px;

  background: white;
  z-index: 2;

  .logo-img {
    width: 150px;
  }

  .logo-container {
    min-width: 180px;
  }

  .options {
    margin-left: 1rem;
    display: grid;
    grid-template-columns: auto 1fr 1fr;
    column-gap: 1rem;
    align-items: center;
    justify-content: space-between;

    .option {
      cursor: pointer;
    }
  }
}

@media screen and (min-width: 760px) {
  .header {
    .logo-img {
      width: 220px;
    }
  }
}

@media screen and (min-width: 992px) {
  .header {
    .logo-img {
      width: 250px;
    }
  }
}
